using std::IO

fn main:
    set i: 0
    IO.println "Starting Memory Stress Test..."

    while $i < 5000:
        ; Now we can safely convert the integer!

        set s_val: string $i

        ; Concat works because both are strings
        set temp: "Allocation " << $s_val

        ; Print every 1000th to show progress
        if $i == 1000:
            IO.println $temp end
        if $i == 2000:
            IO.println $temp end
        if $i == 3000:
            IO.println $temp end
        if $i == 4000:
            IO.println $temp end

        i: $i + 1
    end
    IO.println "Success!"
end
