using std::IO

fn add:
    @args a, b
    return $a + $b
end

fn apply:
    @args val1, val2, func
    IO.println "Calling function dynamically..."
    return call $func($val1, $val2)
end

fn main:
    ; 1. Store function in variable
    set my_op: add

    ; 2. Pass it to another function
    set result: (apply 10, 20, $my_op)

    IO.print "Result: "
    IO.println $result
end
