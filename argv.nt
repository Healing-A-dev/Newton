using std::IO
using std::File
using std::System

fn main:
    set filename: System.argv 1

    if $filename == 0:
        IO.println "Error: Please provide a filename."
        return
    end

    IO.print "Reading file: "
    IO.println $filename

    set content: File.readEntireFile $filename

    IO.println "--- Content ---"
    IO.print $content
    IO.println "\n---------------"
end
